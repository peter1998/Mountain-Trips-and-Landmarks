@model Mountain

@{
    ViewData["Title"] = "Detail of the mountain";
}

<div class="row text">
    <div class="col-md-8 offset-2" style="background: #ffffff">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="MountainLogo" />
                </div>

                <div class="form-group">
                    <label asp-for="MountainPictureURL" class="control-label"></label>
                    <input asp-for="MountainPictureURL" class="form-control" readonly />
                    <span asp-validation-for="MountainPictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrekkingTime" class="control-label"></label>
                    <input asp-for="TrekkingTime" class="form-control" readonly />
                    <span asp-validation-for="TrekkingTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = docucument.getElementById('MountainLogo');
            output.src = $('#MountainPictureURL').val();
        })
    </script>


}