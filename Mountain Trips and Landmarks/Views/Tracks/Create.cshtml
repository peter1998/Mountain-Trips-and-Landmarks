@model NewTrackVm
@using Mountain_Trips_and_Landmarks.Data
@{ 
    ViewData["Title"] = "Create a new adventure track";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new track</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="TrackCateogryURL" class="control-label"></label>
                                <input asp-for="TrackCateogryURL" class="form-control" />
                                <span asp-validation-for="TrackCateogryURL" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TrackCategory" class="control-label"></label>
                                <select asp-for="TrackCategory" class="form-control" asp-items="Html.GetEnumSelectList<TrackCategory>()"></select>
                                <span asp-validation-for="TrackCategory" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="StartingPoint" class="control-label"></label>
                                <input asp-for="StartingPoint" class="form-control" />
                                <span asp-validation-for="StartingPoint" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndPoint" class="control-label"></label>
                                <input asp-for="EndPoint" class="form-control" />
                                <span asp-validation-for="EndPoint" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Highlights" class="control-label"></label>
                                <input asp-for="Highlights" class="form-control" />
                                <span asp-validation-for="Highlights" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MountainsIds" class="control-label"></label>
                                <select asp-for="MountainsIds" class="form-control" asp-items="ViewBag.Mountains" multiple></select>
                                <span asp-validation-for="MountainsIds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PeaksIds" class="control-label"></label>
                                <select asp-for="PeaksIds" class="form-control" asp-items="ViewBag.Peaks" multiple></select>
                                <span asp-validation-for="PeaksIds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LandmarksIds" class="control-label"></label>
                                <select asp-for="LandmarksIds" class="form-control" asp-items="ViewBag.Landmarks" multiple></select>
                                <span asp-validation-for="LandmarksIds" class="text-danger"></span>
                            </div>
                        </div>
                                                
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>
            </div> 
        </div>
    </div>
</div>

@section Scripts {
<script>
    $("#TrackCateogryURL").on("change", function () {
        var output = document.getElementById("ImageUrlPreview")
        output.src = $(this).val();
    })
</script>
}